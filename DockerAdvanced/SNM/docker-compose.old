version: "3.2"
services:

  frontend:
    image: nginx
    ports:
    - "80:80"
    networks:
      - frontend
  app:
    image: 127.0.0.1:5000/snm_app
    build:  ./app
    ports:
      - "6000:6000"
    env_file:
      - myenv.env
    environment:
      - DB_HOST=db
      - DB_USER=snm
      - DB_PASSWORD=snm1234
      - DB_NAME=snm
      - APP_PORT=6000
      - APP_HOSTNAME=0.0.0.0
    networks:
      - frontend
      - backend

  db: 
    image: 127.0.0.1:5000/snm_db
    build: ./mysql
    networks:
      - backend
    volumes:
      - /home/kostas/workspace/Lessons/SNM/mysql/init.sql:/docker-entrypoint-initdb.d/01.sql

networks:
  frontend:
  backend: 
